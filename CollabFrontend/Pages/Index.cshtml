@page
@model IndexModel
@{
    ViewData["Title"] = "Collaborated To Do List";
}

<div class="row">

    </br>

    @foreach (var todoList in Model.todolistList)
    {

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-8">
                    <h3 class="panel-title">@todoList.Name</h3>
                </div>
                <div class="col-md-4">
                    <p class="text-right">
                        
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </p>
                    
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        <h4 class="panel-title">
                            Show incomplete Entries
                        </h4>
                        </div>
                        <div  >
                            <div class="panel-body">
                                <table class="table table-striped" id="test-table">
                                            <thead>
                                                <th>Name</th>
                                                <th>Due Date</th>
                                                <th>Worker</th>
                                                <th></th>
                                            </thead>
                                            <tbody>

                                        <tr>
                                            <form method="post">
                                            <td><input type="text" class="form-control" asp-for="newListItem.Name" name="todoText" /></td>
                                            <td><input type="datetime-local" value="0" class="form-control" name="todoDate" /></td>
                                            <td>
                                                <select class="form-control" id="exampleFormControlSelect1" name="workerId">
                                                    <option value="0">no worker</option>
                                                    <option value="@todoList.OwnerID">@todoList.Owner.FirstName @todoList.Owner.LastName</option>
                                                    @foreach (var collab in todoList.Collaborators)
                                                    {
                                                        <option value="@collab.Collaborator.Id">@collab.Collaborator.FirstName @collab.Collaborator.LastName</option>
                                                    }
                                                </select>
                                            </td>
                                            <td class="text-right">
                                                <input type="hidden" name="listId" value="@todoList.Id" asp-for="newListItem.ListID" />
                                                <button type="submit" class="btn btn-default" asp-page-handler="addItem">
                                                    <span class="glyphicon glyphicon-plus"></span>
                                                </button>
                                            </td>
                                            </form>
                                        </tr>
                                    @foreach (var todoItem in todoList.TodoItems)
                                    {
                                        if (todoItem.IsComplete == false)
                                        {
                                        <tr>
                                            <form method="post">
                                            <td><input type="text" value="@todoItem.Name" name="todoName" /></td>
                                            <td><input type="datetime-local" value="@todoItem.Until" name="todoDate"/></td>
                                            <td>
                                                <select class="form-control selectpicker" id="exampleFormControlSelect1" name="workerId" >
                                                    <option value="0" selected>no worker</option>
                                                    <option value="@todoList.OwnerID">@todoList.Owner.FirstName @todoList.Owner.LastName</option>
                                                    @foreach (var collab in todoList.Collaborators)
                                                    {
                                                        <option value="@collab.Collaborator.Id">@collab.Collaborator.FirstName @collab.Collaborator.LastName</option>
                                                    }
                                                </select>
                                            </td>
                                            @if (todoItem.Worker != null) 
                                            {
                                                <td>@todoItem.Worker.FirstName @todoItem.Worker.LastName</td>
                                            } else {
                                                <td></td>
                                            }
                                            
                                            <td class="text-right">
                                            
                                            <input type="hidden" name="todoId" value="@todoItem.Id"/>
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="check" >
                                                    <span class="glyphicon glyphicon-ok"></span>
                                                </button>
                                                <button type="submit" class="btn btn-default btn-xs"asp-page-handler="editItem" >
                                                    <span class="glyphicon glyphicon-pencil"></span>
                                                </button>
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="delete">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                                
                                            </td>
                                            </form>
                                        </tr>
                                        } 
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        <h4 class="panel-title">
                            Show complete Entries
                        </h4>
                        </div>
                        <div>
                            <div class="panel-body">
                                <table class="table table-striped">
                                    <thead>
                                        <th>Name</th>
                                        <th>Due Date</th>
                                        <th>Worker</th>
                                        <th></th>
                                    </thead>
                                    <tbody>
                                    @foreach (var todoItem in todoList.TodoItems)
                                    { 
                                        if (todoItem.IsComplete == true)
                                        {
                                        <tr>
                                            <td>@todoItem.Name</td>
                                            <td>@todoItem.Until</td>
                                            @if (todoItem.Worker != null) 
                                            {
                                                <td>@todoItem.Worker.FirstName @todoItem.Worker.LastName</td>
                                            } else {
                                                <td></td>
                                            }
                                            <td></td>
                                            <td class="text-right">
                                            <form method="post">
                                                <input type="hidden" name="todoName" value="@todoItem.Name"/>
                                                <input type="hidden" name="todoId" value="@todoItem.Id"/>
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="uncheck">
                                                    <span class="glyphicon glyphicon-remove"></span>
                                                </button>
                                                
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="delete">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                                </form>
                                            </td>
                                        </tr>
                                        }
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5 class="panel-title"><span class="label label-success">Owner</span> <span class="label label-info">Collaborator</span></h5>
                </div>
                <div class="panel-body">
                    <p><span class="label label-success">@todoList.Owner.FirstName @todoList.Owner.LastName</span>
                        @foreach (var collab in todoList.Collaborators)
                        {
                            <span class="label label-info">@collab.Collaborator.FirstName @collab.Collaborator.LastName</span>
                        }
                    </p>
                    <div class="row">
                        <div class="col-md-11">
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-default btn-s">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    
</div>
