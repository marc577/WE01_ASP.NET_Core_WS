@page
@model IndexModel
@{
    ViewData["Title"] = "Collaborated To Do List";
}

<div class="row">

    </br>

    @foreach (var todoList in Model.todolistList)
    {

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-8">
                    <h3 class="panel-title">@todoList.Name</h3>
                </div>
                <div class="col-md-4">
                    <p class="text-right">
                        
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </p>
                    
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        <h4 class="panel-title">
                            Show incomplete Entries
                        </h4>
                        </div>
                        <div  >
                            <div class="panel-body">
                                <table class="table table-striped">
                                            <thead>
                                                <th>Name</th>
                                                <th>Due Date</th>
                                                <th></th>
                                            </thead>
                                            <tbody>

                                        <tr>
                                            <form method="post">
                                            <td><input type="text" class="form-control" name="todoText" /></td>
                                            <td><input type="date" class="form-control" name="todoDate" /></td>
                                            <td class="text-right">
                                                <input type="hidden" name="list" value="@todoList.Id" />
                                                <button type="submit" class="btn btn-default" asp-page-handler="addItem">
                                                    <span class="glyphicon glyphicon-ok"></span>
                                                </button>
                                            </td>
                                            </form>
                                        </tr>
                                    @foreach (var todoItem in todoList.TodoItems)
                                    {
                                        if (todoItem.IsComplete == false)
                                        {
                                        <tr>
                                            <td>@todoItem.Name</td>
                                            <td>@todoItem.Until</td>
                                            <td class="text-right">
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="addItem" >
                                                    <span class="glyphicon glyphicon-ok"></span>
                                                </button>
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="pencil">
                                                    <span class="glyphicon glyphicon-pencil"></span>
                                                </button>
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="pencil">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                            </td>
                                        </tr>
                                        } 
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        <h4 class="panel-title">
                            Show complete Entries
                        </h4>
                        </div>
                        <div>
                            <div class="panel-body">
                                <table class="table table-striped">
                                    <thead>
                                        <th>Name</th>
                                        <th>Due Date</th>
                                        <th></th>
                                    </thead>
                                    <tbody>
                                    @foreach (var todoItem in todoList.TodoItems)
                                    { 
                                        if (todoItem.IsComplete == true)
                                        {
                                        <tr>
                                            <td>@todoItem.Name</td>
                                            <td>@todoItem.Until</td>
                                            <td class="text-right">
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="test">
                                                    <span class="glyphicon glyphicon-remove"></span>
                                                </button>
                                                
                                                <button type="submit" class="btn btn-default btn-xs" asp-page-handler="test">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </button>
                                            </td>
                                        </tr>
                                        }
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5 class="panel-title"><span class="label label-success">Owner</span> <span class="label label-info">Collaborator</span></h5>
                </div>
                <div class="panel-body">
                    <p><span class="label label-success">@todoList.Owner.FirstName @todoList.Owner.LastName</span>
                        @foreach (var collab in todoList.Collaborators)
                        {
                            <span class="label label-info">@collab.Collaborator.FirstName @collab.Collaborator.LastName</span>
                        }
                    </p>
                    <p><input type="email" class="form-control" placeholder="Email"><button type="submit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button></p>
                </div>
            </div>
        </div>
    </div>
    }

    
    
</div>
